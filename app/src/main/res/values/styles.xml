<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorlight</item>
        <item name="colorOnSurface">@color/colordark</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="textColor">@color/daynight_textColor</item>
        <item name="ButtonColor">@color/colorAccent</item>
        <item name="bgColor">#ffffff</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="textColor">#ffffff</item>
        <item name="ButtonColor">#aeaeae</item>
        <item name="bgColor">@color/colordark</item>
    </style>
</resources>